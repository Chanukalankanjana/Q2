@page
@model Course_InfoModel
@{
    ViewData["Title"] = "Course Info";
}

<div class="col-12 min-vh-100">
<h1>@ViewData["Title"]</h1>

<p>Use this page to Add New Courses.</p>

<form method="post">
    <div class="mb-3">
        <label for="exampleFormControlInput1" class="form-label">Course Name</label>
        <input type="text" name="name" class="form-control" id="exampleFormControlInput1" placeholder="Course Name">
    </div>
    <div class="mb-3">
        <label for="exampleFormControlInput1" class="form-label">Lecturer Name</label>
        <input type="text" lecturerName="Lecturer" name="lecturer" class="form-control" id="exampleFormControlInput1" placeholder="Lecturer Name">
    </div>
    <div class="mb-3">
        <button type="submit" class="btn btn-primary mb-3">Submit</button>
    </div>
</form>